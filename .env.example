# =====================================================
# Frontend Configuration (Vercel Deployment)
# =====================================================
# This file contains PUBLIC configuration for the Next.js frontend
# Copy to .env.local for local development
# Add these as environment variables in Vercel dashboard for production
# Only NEXT_PUBLIC_* variables are exposed to the browser

# =====================================================
# APPLICATION SETTINGS
# =====================================================
# Basic application configuration
NEXT_PUBLIC_APP_NAME=Pagent Money
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_DESCRIPTION=Smart credit card on Base blockchain

# =====================================================
# CHAIN CONFIGURATION
# =====================================================
# Chain environment selection
# Options: mainnet, testnet (defaults to mainnet in production)
NEXT_PUBLIC_CHAIN_ENV=mainnet

# Single chain mode (recommended for production)
# Set to true to restrict to only the selected chain
NEXT_PUBLIC_SINGLE_CHAIN_MODE=true

# RPC URLs (optional, uses defaults if not set)
# You can use public RPCs or your own nodes/services
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Supabase Edge Functions URL (public endpoint)
NEXT_PUBLIC_SUPABASE_FUNCTIONS_URL=https://your-project-id.supabase.co/functions/v1

# Note: We intentionally DO NOT include SUPABASE_ANON_KEY
# Authentication is handled via wallet signatures for better security

# =====================================================
# WEB3 INTEGRATIONS
# =====================================================
# Coinbase Developer Platform API Key (optional but recommended)
# Get from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_COINBASE_API_KEY=your_coinbase_api_key

# WalletConnect Project ID (for wallet connections)
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# =====================================================
# BLOCKCHAIN EXPLORERS
# =====================================================
# Etherscan API Key for transaction lookups
# Get from: https://etherscan.io/apis
# Works across all Etherscan-based explorers (including Basescan)
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key

# =====================================================
# SMART CONTRACT ADDRESSES
# =====================================================
# Base Mainnet Contracts
NEXT_PUBLIC_USDC_ADDRESS_MAINNET=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_SPENDER_ADDRESS_MAINNET=0x_your_deployed_spender_address
NEXT_PUBLIC_REGISTRY_ADDRESS_MAINNET=0x_your_deployed_registry_address

# Base Sepolia Testnet Contracts
NEXT_PUBLIC_USDC_ADDRESS_TESTNET=0x036CbD53842c5426634e7929541eC2318f3dCF7e
NEXT_PUBLIC_SPENDER_ADDRESS_TESTNET=0x_your_testnet_spender_address
NEXT_PUBLIC_REGISTRY_ADDRESS_TESTNET=0x_your_testnet_registry_address

# =====================================================
# PAYMENT PROCESSING
# =====================================================
# Stripe Publishable Key (client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Payment processor selection
NEXT_PUBLIC_PAYMENT_PROCESSOR=stripe

# =====================================================
# ANALYTICS & MONITORING
# =====================================================
# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel (optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/disable features on the frontend
NEXT_PUBLIC_ENABLE_TESTNET=false
NEXT_PUBLIC_ENABLE_DEMO_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Allow chain selection via URL parameter (for testing)
# When true, users can add ?chain=BASE or ?chain=SEPOLIA to the URL
NEXT_PUBLIC_ALLOW_CHAIN_OVERRIDE=false

# =====================================================
# UI CONFIGURATION
# =====================================================
# Theme and branding
NEXT_PUBLIC_THEME_PRIMARY_COLOR=#0052FF
NEXT_PUBLIC_THEME_SECONDARY_COLOR=#00D4FF

# Support contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_URL=https://support.yourdomain.com

# =====================================================
# API ENDPOINTS
# =====================================================
# External API endpoints (if any)
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
# Only used in development
NEXT_PUBLIC_DEBUG=false

# =====================================================
# DEPLOYMENT INFORMATION
# =====================================================
# These are typically set automatically by Vercel
# NEXT_PUBLIC_VERCEL_URL - Set by Vercel
# NEXT_PUBLIC_VERCEL_ENV - Set by Vercel (production, preview, development)
# VERCEL_GIT_COMMIT_SHA - Set by Vercel

# =====================================================
# CDN CONFIGURATION
# =====================================================
# Asset optimization
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# =====================================================
# SECURITY HEADERS
# =====================================================
# Content Security Policy settings
NEXT_PUBLIC_CSP_REPORT_URI=https://yourdomain.report-uri.com/r/d/csp/enforce

# =====================================================
# SOCIAL MEDIA
# =====================================================
# Social media links and metadata
NEXT_PUBLIC_TWITTER_HANDLE=@yourbrand
NEXT_PUBLIC_OG_IMAGE=https://yourdomain.com/og-image.png