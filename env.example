# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Pagent Money
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_FUNCTIONS_URL=https://your-project.supabase.co/functions/v1

# Note: Anon key is needed for Edge Function authentication
# Wallet signatures provide additional security layer

# Coinbase/Base Configuration
NEXT_PUBLIC_COINBASE_API_KEY=your_coinbase_api_key
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# Etherscan Multichain API (get from https://etherscan.io/apis)
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key

# Chain Configuration
# Options: mainnet, testnet (defaults to mainnet in production)
NEXT_PUBLIC_CHAIN_ENV=mainnet
# Set to true to only allow one chain (useful for production)
NEXT_PUBLIC_SINGLE_CHAIN_MODE=false

# RPC URLs (optional, uses defaults if not set)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Contract Addresses - Base Mainnet
NEXT_PUBLIC_USDC_ADDRESS_MAINNET=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_SPENDER_ADDRESS_MAINNET=your_deployed_spender_contract_address_mainnet
NEXT_PUBLIC_REGISTRY_ADDRESS_MAINNET=your_deployed_registry_contract_address_mainnet

# Contract Addresses - Base Sepolia Testnet
NEXT_PUBLIC_USDC_ADDRESS_TESTNET=0x036CbD53842c5426634e7929541eC2318f3dCF7e
NEXT_PUBLIC_SPENDER_ADDRESS_TESTNET=your_deployed_spender_contract_address_testnet
NEXT_PUBLIC_REGISTRY_ADDRESS_TESTNET=your_deployed_registry_contract_address_testnet

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment Processing
NEXT_PUBLIC_PAYMENT_PROCESSOR=stripe
WEBHOOK_SECRET=your_webhook_signing_secret

# API Configuration
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Security is handled by Edge Functions
# No JWT secrets needed in frontend

# External Services
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENV=sandbox

# Development/Testing
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
